<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
    <display-name>Servlets</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>GetHandler</servlet-name>
        <servlet-class>com.harmonengineering.GetPost.GetHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostHandler</servlet-name>
        <servlet-class>com.harmonengineering.GetPost.PostHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.harmonengineering.Servlet.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetHandler</servlet-name>
        <url-pattern>/GetPost/gethandler</url-pattern>
        <url-pattern>/web/GetPost/gethandler</url-pattern>
        <url-pattern>/gethandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostHandler</servlet-name>
        <url-pattern>/GetPost/posthandler</url-pattern>
        <url-pattern>/web/GetPost/posthandler</url-pattern>
        <url-pattern>/posthandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/GetPost/test_servlet</url-pattern>
        <url-pattern>/test_servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.harmonengineering.ServletConcept.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <!--<url-pattern>/ServletConcept/my_servlet</url-pattern>-->
        <url-pattern>/ServletConcept/my_servlet</url-pattern>
        <url-pattern>/my_servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NameServlet</servlet-name>
        <servlet-class>com.harmonengineering.ServletConcept.NameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NameServlet</servlet-name>
        <url-pattern>/ServletConcept/name</url-pattern>
        <url-pattern>/name</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InterfaceDemo</servlet-name>
        <servlet-class>com.harmonengineering.ServletInterfaces.InterfaceDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InterfaceDemo</servlet-name>
        <url-pattern>/interface</url-pattern>
        <url-pattern>/ServletInterfaces/interface</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.harmonengineering.FilterDemo.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/FilterDemo/dashboard</url-pattern>
        <url-pattern>/FilterDemo/profile</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>AccountDashboard</servlet-name>
        <servlet-class>com.harmonengineering.FilterDemo.AccountDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountProfile</servlet-name>
        <servlet-class>com.harmonengineering.FilterDemo.AccountProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoPage</servlet-name>
        <servlet-class>com.harmonengineering.FilterDemo.InfoPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountDashboard</servlet-name>
        <url-pattern>/FilterDemo/dashboard</url-pattern>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountProfile</servlet-name>
        <url-pattern>/FilterDemo/profile</url-pattern>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoPage</servlet-name>
        <url-pattern>/FilterDemo/info</url-pattern>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.harmonengineering.CookieTrackingDemo.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <servlet-class>com.harmonengineering.CookieTrackingDemo.Dashboard</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/CookieTrackingDemo/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/CookieTrackingDemo/login</url-pattern>
    </servlet-mapping>

